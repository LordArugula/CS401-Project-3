<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_padding"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/label_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/label_profile"
            android:textSize="@dimen/header_textSize" />

        <TextView
            android:id="@+id/label_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_username"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/text_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="username"
            android:hint="@string/userName_hint_text"
            android:inputType="text"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/register_label_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_label_firstName"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/register_text_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="first name"
            android:hint="@string/register_hint_firstName"
            android:inputType="textPersonName"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/register_label_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_label_lastName"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/register_text_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="last name"
            android:hint="@string/register_hint_lastName"
            android:inputType="textPersonName"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/register_label_emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_label_emailAddress"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/register_text_emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="emailAddress"
            android:hint="@string/register_hint_emailAddress"
            android:inputType="textEmailAddress"
            android:minHeight="@dimen/editText_text_minHeight" />

        <Button
            android:id="@+id/button_updateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:onClick="updateProfile"
            android:text="@string/save_button_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:background="@android:color/darker_gray"
            android:visibility="visible" />

        <TextView
            android:id="@+id/label_changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/label_changePassword"
            android:textSize="@dimen/header_textSize" />

        <TextView
            android:id="@+id/label_oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_old_password"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/text_oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="password"
            android:hint="@string/register_hint_password"
            android:inputType="textPassword"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/label_newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_new_password"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/register_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="password"
            android:hint="@string/register_hint_password"
            android:inputType="textPassword"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/register_label_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_label_confirm_password"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/register_text_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="password"
            android:hint="@string/register_hint_password"
            android:inputType="textPassword"
            android:minHeight="@dimen/editText_text_minHeight" />

        <Button
            android:id="@+id/button_updatePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:onClick="updatePassword"
            android:text="@string/changePassword_button_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:background="@android:color/darker_gray"
            android:visibility="visible" />

        <Button
            android:id="@+id/register_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toProjectView"
            android:text="@string/register_button_back"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>
</ScrollView>