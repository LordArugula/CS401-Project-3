<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_padding"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/profile_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_profilePicture"
            android:contentDescription="@string/profile_picture_desc"
            android:layout_width = "match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/main_bottomMargin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="70dp"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:background="@android:color/darker_gray"
            android:visibility="visible" />

        <TextView
            android:id="@+id/profile_label_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/profile_label_profile"
            android:textSize="@dimen/header_textSize" />

        <TextView
            android:id="@+id/profile_label_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_username"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/profile_text_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="username"
            android:hint="@string/profile_userName_hint_text"
            android:inputType="text"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/profile_label_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_firstName"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/profile_text_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="first name"
            android:hint="@string/profile_firstName_hint_text"
            android:inputType="textPersonName"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/profile_label_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_lastName"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/profile_text_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="last name"
            android:hint="@string/profile_lastName_hint_text"
            android:inputType="textPersonName"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/profile_label_emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_emailAddress"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/profile_text_emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="emailAddress"
            android:hint="@string/profile_emailAddress_hint_text"
            android:inputType="textEmailAddress"
            android:minHeight="@dimen/editText_text_minHeight" />

        <Button
            android:id="@+id/profile_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:onClick="updateProfile"
            android:text="@string/profile_save_button_text" />

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:background="@android:color/darker_gray"
            android:visibility="visible" />-->

        <TextView
            android:id="@+id/profile_label_changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/profile_label_changePassword"
            android:textSize="@dimen/header_textSize" />

        <TextView
            android:id="@+id/profile_label_oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_old_password"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/profile_text_oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="password"
            android:hint="@string/password_hint_text"
            android:inputType="textPassword"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/profile_label_newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_new_password"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/profile_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="password"
            android:hint="@string/password_hint_text"
            android:inputType="textPassword"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/profile_label_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_confirm_password"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/profile_text_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="password"
            android:hint="@string/password_hint_text"
            android:inputType="textPassword"
            android:minHeight="@dimen/editText_text_minHeight" />

        <Button
            android:id="@+id/profile_changePassword_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:onClick="updatePassword"
            android:text="@string/profile_changePassword_button_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:background="@android:color/darker_gray"
            android:visibility="visible" />

        <Button
            android:id="@+id/profile_back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toProjectView"
            android:text="@string/profile_back_button"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>
</ScrollView>
