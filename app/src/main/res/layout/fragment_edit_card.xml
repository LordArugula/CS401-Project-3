<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/edit_card_fragment"
    android:layout_height="match_parent"
    tools:context=".EditCardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="200dp"
        android:minHeight="240dp"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:id="@+id/card_content_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/card_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:text="Hello world"
                    android:textSize="24sp" />

            </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:id="@+id/tags_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

<!--        <LinearLayout-->
<!--            android:id="@+id/tags_container"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layoutDirection="rtl"-->
<!--            android:minHeight="36dp"-->
<!--            android:orientation="horizontal"-->
<!--            android:padding="4dp">-->

<!--        </LinearLayout>-->

        <RelativeLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/assigned_user_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/user_profile_image_description"
                android:maxWidth="48dp"
                android:maxHeight="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/assigned_user_profile_image"
                android:text="@string/card_default_date"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

        </RelativeLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/button_container_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:minHeight="36dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/assign_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:onClick="assignDate"
                android:text="Assign Date" />

            <Button
                android:id="@+id/assign_user_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:onClick="assignUser"
                android:text="Assign User" />

            <Button
                android:id="@+id/edit_tags_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:onClick="editTags"
                android:text="Tags" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_container_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:minHeight="36dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/save_edits_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:onClick="saveChanges"
                android:text="Save" />

            <Button
                android:id="@+id/cancel_edits_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:onClick="cancelChanges"
                android:text="Cancel" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/preview_card_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:onClick="previewCard"
                android:text="Preview" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>