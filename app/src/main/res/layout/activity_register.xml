<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_padding"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/register_label_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_label_firstName"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/register_text_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="name"
            android:hint="@string/register_hint_firstName"
            android:inputType="textPersonName"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/register_label_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_label_lastName"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/register_text_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="name"
            android:hint="@string/register_hint_lastName"
            android:inputType="textPersonName"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/register_label_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_label_username"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/register_text_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="username"
            android:hint="@string/register_hint_username"
            android:inputType="text"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/register_label_emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_label_emailAddress"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/register_text_emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="emailAddress"
            android:hint="@string/register_hint_emailAddress"
            android:inputType="textEmailAddress"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/register_label_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_label_password"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/register_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="password"
            android:hint="@string/register_hint_password"
            android:inputType="textPassword"
            android:minHeight="@dimen/editText_text_minHeight" />

        <TextView
            android:id="@+id/register_label_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_label_confirm_password"
            android:textSize="@dimen/label_textSize" />

        <EditText
            android:id="@+id/register_text_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_bottomMargin"
            android:autofillHints="password"
            android:hint="@string/register_hint_password"
            android:inputType="textPassword"
            android:minHeight="@dimen/editText_text_minHeight" />

        <Button
            android:id="@+id/register_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="registerAccount"
            android:text="@string/register_button_text" />

    </LinearLayout>

    <Button
        android:id="@+id/register_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toMainMenu"
        android:text="@string/register_button_back"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>